---
interface inputObj {
  name: string;
  type: "text" | "password" | "number" | "checkbox" | "radio" | "select" | "date";
  maxLen: number;
  minLen: number;
  step: number;
  required: boolean;
  min: number;
  max: number;
  options: object;
}

const today = new Date().toISOString().split('T')[0];

const { obj, columns } = Astro.props;
---

<!-- Setup column. For every SKU there is one column of inputs -->
<form id="columnForm" class="flex" action="" method="post">
  {
    Array.from({ length: columns }).map((_, index) => (
      <div class="w-40 border-r">
        {obj.map((item: inputObj) => (
          <div class="flex border-b h-16 justify-center items-center">
            {item.type === "text" && (
              <input
                class="w-[80%] border"
                name={item.name + `-${index}`}
                id={item.name + `-${index}`}
                type={item.type}
                minlength={item.minLen}
                maxlength={item.maxLen}
                required={item.required}
              />
            )}
            {item.type === "number" && (
              <input
                class="w-[80%] border"
                name={item.name + `-${index}`}
                id={item.name + `-${index}`}
                type={item.type}
                step={item.step}
                max={item.max}
              />
            )}
            {item.type === "select" && (
              <select class="w-[80%] border bg-background h-6">
                <option />
                {Object.entries(item.options).map(([key, val]) => (
                  <option value={key}>{val}</option>
                ))}
              </select>
            )}
            {item.type === "date" && (
              <input type="date" min={today} class="z-1">
            )}
          </div>
        ))}
      </div>
    ))
  }
</form>
