---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import SetupColumn from "../components/SetupColumn.astro";
import { headers, inputs } from "../data/setup";
import Spacer from "../components/Spacer.astro";

let columns = Number(Astro.url.searchParams.get("numOfSKUs") || 1);

if (columns > 50) {
  columns = 50;
}
---

<Layout>
  <nav
    class="flex h-12 w-full border-b items-center px-2 justify-between fixed top-20 bg-background z-50"
  >
    <div class="flex gap-2">
      <button class="btn h-8 text-xs">Add Column</button>
      <button class="btn h-8 text-xs">Import Excel</button>
    </div>
    <button class="btn h-8 text-xs" type="submit" form="columnForm">Submit</button>
  </nav>
  <Spacer height={12} />
  <div class="flex w-[10000px]">
    <Sidebar obj={headers} />

    <SetupColumn obj={inputs} columns={columns} />
  </div>
</Layout>
