---
import Layout from "../layouts/Layout.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
  return redirect("/dashboard");
}
---

<Layout>
  <main class="flex flex-col items-center w-full justify-evenly h-[80vh]" id="main">
    <div class="flex flex-col gap-12 justify-center items-center">
      <h1 class="text-6xl tracking-tighter font-bold">Best Buy Canada SKU Setup Portal</h1>
      <div
        class="flex flex-col w-48 h-32 rounded-md justify-center items-center gap-3 border shadow-md bg-headerbg"
      >
      
        <button
          class="btn w-[80%]"
          hx-get="/login"
          hx-swap="innerHTML transition:true"
          hx-target="#main">Log In</button
        >
        <button
          class="btn w-[80%]"
          hx-get="/register"
          hx-swap="innerHTML transition:true"
          hx-target="#main">Register</button
        >
      </div>
    </div>
  </main>
</Layout>
